{
  "manifest_version": 3,
  "name": "Ollama Vector Database Extension",
  "version": "1.0",
  "description": "Capture webpage content and store in vector database via Ollama API",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "alarms",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Capture Page Content"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-scripts/content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}